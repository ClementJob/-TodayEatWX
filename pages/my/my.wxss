/* pages/my/my.wxss */

@import "../../icon.wxss";
.content {
    padding: 0%;
}

page {
    background: rgba(250, 233, 208, 0.3);
}

.content .title {
    width: 100%;
    text-align: center;
    padding: 30rpx 0;
    color: white;
    font-weight: bold;
    font-size: 50rpx;
    background: rgba(236, 199, 146, 1);
}

.content .userInfo {
    position: relative;
    width: 100%;
    height: 390rpx;
    background: rgba(236, 199, 146, 1);
    margin-bottom: 50rpx;
}

.content .userInfo .info {
    position: absolute;
    top: 50rpx;
    width: 86%;
    height: 380rpx;
    background-color: white;
    border-radius: 24rpx;
    left: 7%;
    box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.content .userInfo .info .head {
    text-align: center;
}

.content .userInfo .info .head>image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 0 auto;
    margin-top: -60rpx;
}

.userInfo .nickname {
    font-size: 30rpx;
}

.userInfo .level {
    width: 100%;
}

.userInfo .level text {
    font-size: 20rpx;
    color: white;
    display: inline-block;
    background-color: rgba(249, 113, 113, 1);
    border-radius: 20%/50%;
    padding: 0 20rpx;
}

.num {
    text-align: center;
}

.num .concern,
.num .fans {
    width: 35%;
    display: inline-block;
    padding: 25rpx;
    font-size: 30rpx;
    line-height: 40rpx;
}

.num .concern_num,
.num .fans_num {
    margin: 20rpx 0;
}

.introduced {
    text-align: center;
    font-size: 25rpx;
}

.sub_menu {
    width: 92%;
    height: 140rpx;
    background-color: white;
    border-radius: 12rpx;
    margin: 0 auto;
    margin-top: 70rpx;
    box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.sub_menu view {
    text-align: center;
    font-size: 30rpx;
    display: inline-block;
    width: 33%;
}

.my_recipe {
    text-align: center;
    width: 92%;
    margin: 0 auto;
    margin-top: 30rpx;
    border-radius: 12rpx;
    background-color: white;
    box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.16);
    margin-bottom: 30rpx;
}

.my_recipe>text {
    display: block;
    margin: 20rpx auto;
    margin-top: 20rpx;
}

.recipe_list {
    width: 100%;
    text-align: left;
    overflow: auto;
}

.recipe_list image {
    width: 100%;
    height: 160rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
}

.recipe_list_image {
    width: 35%;
    margin-left: 5%;
    display: inline-block;
}

.recipe_list_item {
    display: inline-block;
    height: 160rpx;
    font-size: 30rpx;
    width: 55%;
    padding-left: 5%;
}

.recipe_list view {
    float: left;
}

.clean_both {
    clear: both;
}

.recipe_list_item_title {
    font-weight: bold;
    margin-bottom: 45rpx;
    font-size: 30rpx;
}

.recipe_list_item_title_time {
    font-weight: normal;
    display: block;
    width: 100%;
    color: #ccc;
}

.recipe_list_title_num {
    display: block;
}

.recipe_list_title_num text {
    color: #ccc;
}