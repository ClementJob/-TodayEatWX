/* pages/details/details.wxss */

@import"../../app.wxss";
page {
    background: rgba(250, 233, 208, 0.3);
}

.container {
    width: 100%;
    min-height: 800rpx;
    padding: 0%;
}

.topimg {
    width: 100%;
    height: 450rpx;
    background-size: 100%;
}

.content {
    width: 90%;
    height: auto;
    margin: auto;
    margin-top: -100rpx;
    background-color: white;
    border-radius: 24rpx;
    box-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.16);
    margin-bottom: 40rpx;
}

.content .user {
    margin: 0 auto;
    width: 80%;
    border-bottom: 0.5rpx dashed #ccc;
    position: relative;
    height: 200rpx;
}

.user-headimg,
.user-nickname {
    float: left;
    display: block;
}

.content .user .user-headimg image {
    width: 100rpx;
    height: 100rpx;
    margin-top: 55rpx;
    margin-left: 0rpx;
    margin-bottom: 40rpx;
    border-radius: 50%;
}

.user-nickname {
    height: 195rpx;
    line-height: 195rpx;
    margin-left: 30rpx;
}

.message {
    width: 95%;
    text-align: left;
    margin: 0 auto;
    margin: 20rpx;
}

.message .mgs-title {
    text-align: left;
    font-size: 30rpx;
    font-weight: bold;
    margin-left: 30rpx;
    display: inline-block;
    border-bottom: 5rpx solid red;
    margin-bottom: 20rpx;
}

.message-box {
    width: 100%;
    background-color: white;
    /* border-top: 1rpx solid #ccc; */
    position: fixed;
    bottom: 0;
    left: 0;
    padding-left: 30rpx;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
}

.message-box .mgs-box-input {
    width: 70%;
    height: 30rpx;
    background-color: rgba(204, 204, 204, 0.3);
    border-radius: 12rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
}

.msageCList{
    width: 100%;
    height: 150rpx;
    border-bottom: 1rpx solid #ccc;
}


.msageCList>view{
    display: inline-block;
}

.msageImg{
    text-align: center;
    width: 20%;
}
.msageImg>image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.msageText{
    width: 75%;
    font-size: 30rpx;
}
.msageText>view{
    width: 100%;
}

.text{
    width: 100%;
}

.text>textarea{
    width: 92%;
    padding: 4% 4%;
}

.text .row{
    width: 92%;
    padding: 4% 4%;
}
.text h2{
    margin-left: 4%;
    margin-top: 30rpx;
    font-weight: bold;
}
.buzhouimg{
    border-radius: 12rpx;
    width: 100%;
}